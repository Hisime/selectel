.hero-header
  color: $white

  &__title
    font-family $font-family2
    font-weight $semibold
    font-size $font-large
    line-height $line-height-big
    margin-bottom: 39px;
    @media (max-width: $screen-lg-top)
      font-size $font-big
      line-height $line-height-medium
      margin-bottom 32px

  &__slider
    position relative
    width 100%
    height 600px
    background-color #000
    @media (max-width: $screen-lg-top)
      height 568px

  &__item
    visibility hidden
    opacity 0
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    padding-top 105px
    background-color $dark
    transition opacity 0.6s step-end, visibility 0.6s step-end
    @media (max-width: $screen-lg-top)
      height 568px
      padding-top 93px

  &__item--active
    opacity 1
    z-index 2
    visibility visible
    transition opacity 0.6s ease-in-out, visibility 0.6s ease-in-out

  &__item--servers
    background linear-gradient(#2F3F66, #314579);

  &__item--storage
    background linear-gradient(#2F4966, #34557C);

  &__item--cloud
    background linear-gradient(#2F6066, #327179);

  &__item--data-centers
    background linear-gradient(#4E2F66, #603285);

  &__item-inner
    width 62%
    @media (max-width: $screen-md-top)
      width 100%
    @media (min-width: $screen-lg) and (max-width: $screen-xl-top)
      width 100%

  &__descr
    font-size $font-smaller
    line-height $line-height-small
    margin-bottom 41px
    @media (max-width: $screen-lg-top)
      display none

  &__dots
    position absolute
    z-index 3
    display flex
    left 50%
    bottom 40px
    transform translateX(-50%)
    @media (max-width: $screen-lg-top)
      display none

  &__arrows
    position absolute
    z-index 3
    display flex
    bottom 24px
    left 13px
    @media (min-width: $screen-lg)
      display none

  &__arrow
    position relative
    width 48px
    height 48px
    &::after
      content ''
      position absolute
      top 12px
      left 14px
      border 12px solid transparent
      border-left 21px solid $white

  &__arrow--left
    transform rotate(180deg)
    margin-right 14px

  &__slider
    position relative

  &__dot
    width 8px
    height 8px
    border-radius 50%
    margin-right 8px
    opacity $opacity
    border 1px solid $white
    cursor pointer
    animation()
    &:hover
      opacity 1
    &:last-child
      margin-right 0

  &__dot--active
    background-color $white
